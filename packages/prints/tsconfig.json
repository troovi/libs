{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "lib": ["es2020", "dom"],
    "jsx": "react-jsx",
    "outDir": "./types",
    "baseUrl": "./"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
